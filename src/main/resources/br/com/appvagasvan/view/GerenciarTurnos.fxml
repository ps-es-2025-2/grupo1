<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.appvagasvan.presentation.controller.GerenciarTurnosController">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" spacing="10.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
            <children>
                <Label text="Gerenciamento de Turnos">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <TableView fx:id="turnosTableView" prefHeight="200.0">
                    <columns>
                        <TableColumn fx:id="horarioColumn" prefWidth="150.0" text="Horário" />
                        <TableColumn fx:id="tipoTurnoColumn" prefWidth="150.0" text="Tipo" />
                        <TableColumn fx:id="passageirosColumn" prefWidth="100.0" text="Passageiros" />
                        <TableColumn fx:id="vagasColumn" prefWidth="100.0" text="Vagas Disp." />
                    </columns>
                </TableView>
                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="btnRemover" onAction="#handleRemover" text="Remover Selecionado" />
                    </children>
                </HBox>
                <Label text="Dados do Turno">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Label>
                <HBox spacing="10.0">
                    <children>
                        <VBox spacing="5">
                            <Label text="Horário (HH:mm):" />
                            <TextField fx:id="horarioTextField" prefWidth="150.0" promptText="HH:mm" />
                        </VBox>
                        <VBox spacing="5">
                            <Label text="Tipo de Turno:" />
                            <ComboBox fx:id="tipoTurnoComboBox" prefWidth="150.0" />
                        </VBox>
                        <VBox spacing="5">
                            <Label text="Vagas:" />
                            <TextField fx:id="vagasTextField" prefWidth="100.0" promptText="Nº de vagas" />
                        </VBox>
                    </children>
                </HBox>
                <Button fx:id="btnSalvar" onAction="#handleSalvar" text="Salvar Turno" />
            </children>
        </VBox>
    </children>
</AnchorPane>
